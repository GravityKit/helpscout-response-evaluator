{
  "typography": {
    "fontFamily": "Aktiv Grotesk, -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif",
    "fontSize": {
      "base": "13px",
      "small": "11px",
      "large": "16px",
      "heading": "14px"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "bold": "700"
    },
